function [ Fx, Fy ] = sum_force( protein, type, i, V,t,e)

    for n = 1:length(protein)
        
        if n ==i
            continue
            
        elseif n==i-1 || n== i+1
            
            dx = protein(2*n-1,t) - protein(2*i-1,t);
            dy = protein(2*n,t) - protein(2*i,t);
            
            r = sqrt(dx^2+dy^2);
            
            theta = atan(dy/dx);
            
            P = LenardJones(V(6),r,e(type(i),type(n)),d);
            
            Fx = P*cos(theta);
            Fy = P*sin(theta);
            
        else
            P = LenardJones(V(6),r,e,d);
            
            
            
        end
        
        

    end
    


end

